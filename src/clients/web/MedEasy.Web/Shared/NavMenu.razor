<Bar ThemeContrast="ThemeContrast.Light" Breakpoint="Breakpoint.Tablet">
    <BarBrand>
        <BarLink To="/" Match="Match.All">
            <span class="oi oi-home" aria-hidden="true"></span> MedEasy
        </BarLink>
    </BarBrand>
    <BarToggler Clicked="ToggleNavMenu">
    </BarToggler>
    <BarMenu @ref="menu">
        <BarStart>
            <BarItem>
                <BarLink To="counter">
                    <span class="oi oi-plus" aria-hidden="true"></span> Counter
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="fetchdata">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
                </BarLink>
            </BarItem>
            <BarItem>
                <Addons>
                    <Addon AddonType="AddonType.Body">
                        <TextEdit Placeholder="Search ..."
                                  InputMode="TextInputMode.Search"
                                  Size="Size.ExtraLarge" />
                    </Addon>
                    <Addon AddonType="AddonType.End">
                        <Button Type="ButtonType.Button" Color="Color.None" Size="ButtonSize.Small">
                            <Icon Name="IconName.Search" />
                        </Button>
                    </Addon>
                </Addons>
            </BarItem>
        </BarStart>
        <BarEnd>
            <BarItem>
                <BarLink To="agenda">
                    <Icon IconStyle="IconStyle.Regular" /> Agenda
                </BarLink>
            </BarItem>
            <BarItem>
                <BarDropdown>
                    <Tooltip Fade="true" Text="Cyrille NDOUMBE">
                        <BarDropdownToggle><Icon Name="IconName.Person" /></BarDropdownToggle>
                    </Tooltip>
                    <BarDropdownMenu>
                        <BarDropdownItem Title="Control">
                            <Icon Name="IconName.Palette" /> Settings
                        </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarLink To="https://docs.microsoft.com/aspnet/" target="_blank">
                </BarLink>
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>

