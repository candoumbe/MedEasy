@using MedEasy.Web.Models
@using MedEasy.RestObjects;
@model IGenericPagedGetResponse<PatientListitemModel>
@{
    ViewData["Title"] = "Index";
}

<h2>List</h2>

<table class="table-hover table" id="tbl-patients">
    <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Date of birth</th>
            <th>Place of birth</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (PatientListitemModel item in Model.Items)
        {
            <tr>
                <td>@item.Firstname</td>
                <td>@item.Lastname</td>
                <td>@item.BirthDate</td>
                <td>@item.BirthPlace</td>
                <td>
                    <button type="button" class="btn btn-info">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><span class="sr-only">Edit</span>
                    </button>
                    <button type="button" class="btn btn-danger">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span><span class="sr-only">Delete</span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<nav id="tbl-patients-pagination">
    <ul class="pagination-lg">

        @if (Model.Links.Previous != null)
        {
            <li>
                <a href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }

        

        @if (Model.Links.Next != null)
        {
            <li>
                <a href="#" aria-label="Previous">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
    </ul>
</nav>


@section scripts {
    <environment names="Development">
        <script src="~/scripts/System/Ajax.js" asp-append-version="true"></script>
        <script src="~/scripts/MedEasy/Pages/Patient/IndexPageElementMap.js" asp-append-version="true"></script>
        <script src="~/scripts/MedEasy/Pages/Patient/IndexPage.js" asp-append-version="true"></script>
    </environment>
}