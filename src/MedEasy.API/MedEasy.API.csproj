    <ProjectReference Include="..\MedEasy.Mapping\MedEasy.Mapping.csproj" />
    <ProjectReference Include="..\MedEasy.Objects\MedEasy.Objects.csproj" />
    <ProjectReference Include="..\MedEasy.Queries\MedEasy.Queries.csproj" />
    <ProjectReference Include="..\MedEasy.RestObjects\MedEasy.RestObjects.csproj" />
    <ProjectReference Include="..\MedEasy.Services\MedEasy.Services.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Hangfire" Version="1.6.9" />
    <PackageReference Include="Queries.Renderers.SqlServer" Version="3.1.1-alpha-02" />
    <PackageReference Include="Microsoft.AspNetCore.Diagnostics" Version="1.1.1" />
