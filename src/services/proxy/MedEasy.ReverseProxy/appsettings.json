{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      //"Microsoft.Hosting.Lifetime": "Information",
      "Yarp": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Services": [
    {
      "id": "agenda",
      "name": "agenda-api",
      "binding": "https",
      "match": {
        "path": "api/agenda/{**catch-all}"
      }
    },
    {
      "id": "identity",
      "name": "identity-api",
      "binding": "https",
      "proxy": {
        "match": {
          "path": "api/agenda/{**catch-all}"
        },
        "transforms": [
          {
            "Name": "PathRemovePrefix",
            "Value": "api/agenda"
          }
        ]
      }
    },
    {
      "id": "documents",
      "name": "documents-api",
      "binding": "https",
      "proxy": {
        "match": {
          "path": "api/documents/{**catch-all}"
        },
        "transforms": [
          {
            "Name": "PathRemovePrefix",
            "Value": "api/documents"
          }
        ]
      }
    },
    {
      "id": "patients",
      "name": "patients-api",
      "binding": "https",
      "proxy": {
        "match": {
          "path": "api/patients/{**catch-all}"
        },
        "transforms": [
          {
            "Name": "PathRemovePrefix",
            "Value": "api/patients"
          }
        ]
      }
    },
    {
      "id": "measures",
      "name": "measures-api",
      "binding": "https",
      "proxy": {
        "match": {
          "path": "api/measures/{**catch-all}"
        },
        "transforms": [
          {
            "Name":"PathRemovePrefix",
            "Value": "api/measures"
          }
        ]
      }
    },
    {
      "id": "web",
      "name": "web",
      "proxy": {
        "match": {
          "path": "{**catch-all}"
        }
      }
    }

  ]
}
